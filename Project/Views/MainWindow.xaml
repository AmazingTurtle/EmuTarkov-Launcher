                <!-- backendurl -->
                <Label x:Name="BackendURL" Content="BackendURL" HorizontalAlignment="Center" Margin="45,71,45,0" VerticalAlignment="Top" Width="200" Foreground="#FFDDDDDD" FontFamily="{DynamicResource Bender}"/>
                <TextBox x:Name="LoginBackendURL" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Margin="45,95,45,0" Foreground="#FFDDDDDD" Background="#00404040" TextChanged="OnChangeClientBackendURL"  FontFamily="{DynamicResource Bender}"/>

                <!-- port -->
                <Label Content="Port" HorizontalAlignment="Center" Margin="45,15,45,0" VerticalAlignment="Top" Width="200" Foreground="#FFDDDDDD" FontFamily="{DynamicResource Bender}"/>
                <TextBox x:Name="Port" HorizontalAlignment="Center" VerticalContentAlignment="Center" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Margin="45,39,45,0" Foreground="#FFDDDDDD" Background="#00404040" TextChanged="OnChangePort" FontFamily="{DynamicResource Bender}" />
                <!-- additional info texts -->
                <Label Content="Additional informations:" HorizontalAlignment="Center" Height="105" Margin="0,234,0,0" VerticalAlignment="Top" Width="245" Background="Transparent" Foreground="#FF909090" BorderBrush="#00A8ADB3" FontFamily="{DynamicResource Bender}"/>
                <Label HorizontalAlignment="Center" Margin="22,250,22,0" VerticalAlignment="Top" Width="246" Foreground="#FFDDDDDD" FontFamily="{DynamicResource Bender}" FontSize="10" Height="68">
                    <TextBlock Width="240" Height="58">- Make sure your BackendURL<LineBreak/> is not ended with "/" character<LineBreak/>- Port should be unlocked into your router settings<LineBreak/>to allow other PC's to conect</TextBlock>
                </Label>
            </Grid>
            <!-- Server / bots grid -->
            <Grid x:Name="ServerBotsGrid" HorizontalAlignment="Left" Height="342.233" VerticalAlignment="Top" Width="290" Margin="0,0,0,0" d:IsHidden="true">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- PMC war -->
                <GroupBox Header=" PMC War" HorizontalAlignment="Left" Height="59.667" Margin="10,-0.005,0,0" VerticalAlignment="Top" Width="263.775" Foreground="White" BorderBrush="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Template="{DynamicResource GroupBoxTemplate}" FontFamily="{DynamicResource Bender}">
                    <Grid HorizontalAlignment="Center" Height="36.666" VerticalAlignment="Top" Width="255" Margin="-1.5,0">
