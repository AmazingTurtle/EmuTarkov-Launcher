                <Label Content="Character nickname" HorizontalAlignment="Center" Margin="45,121,45,0" VerticalAlignment="Top" Width="200" Foreground="#FFDDDDDD" FontFamily="{DynamicResource Bender}"/>
                <TextBox x:Name="RegisterNickname" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Margin="0,145,0,0" Foreground="#FFDDDDDD" Background="#00404040" TextChanged="OnChangeRegisterNickname"  FontFamily="{DynamicResource Bender}"/>

                <Label Content="Side" Foreground="#FFDDDDDD" HorizontalAlignment="Center" Margin="45,175,45,0" VerticalAlignment="Top" Width="200" Height="25" FontFamily="{DynamicResource Bender}"/>
                <ComboBox x:Name="RegisterSide" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Width="200" SelectionChanged="OnChangeRegisterSide" Foreground="White" Background="Black" FontFamily="{DynamicResource Bender}">
                    <ComboBoxItem Content="Bear" IsSelected="True" Background="#ff404040"/>
                    <ComboBoxItem Content="Usec" Background="#ff404040" />
                </ComboBox>

                <!-- buttons -->
                <Button x:Name="Register" Content="Create Profile" HorizontalAlignment="Center" Margin="0,262.398,0,0" VerticalAlignment="Top" Width="120" Height="30" Foreground="#FFDDDDDD" Background="#00000000" BorderBrush="#FFABADB3" Click="OnLogin" Template="{DynamicResource ButtonTemplates}" FontFamily="{DynamicResource Bender}" />
            </Grid>

            <!-- Account / log in / main panel grid -->
            <Grid x:Name="AccountSettingsGrid" HorizontalAlignment="Left" Height="342.233" VerticalAlignment="Top" Width="290" d:IsHidden="true">
                <!-- player greeting -->
                <Label x:Name="PlayerName" FontFamily="{DynamicResource Bender}" Content="Hello, {username}" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="270" Foreground="White" Height="36.8" FontSize="20"/>
                <!-- buttons -->
                <Button x:Name="ChangeEmail" Content="Change email" HorizontalAlignment="Right" Margin="0,59.8,152.048,0" VerticalAlignment="Top" Width="121.4" Height="25" Foreground="#FFDDDDDD" Background="#00404040" BorderBrush="#FFABADB3" Click="OnChangeEmail" Template="{DynamicResource ButtonTemplates}" />
                <Button x:Name="ChangePassword" Content="Change password" HorizontalAlignment="Right" Margin="0,92,153,0" VerticalAlignment="Top" Width="122" Height="25" Foreground="#FFDDDDDD" Background="#00404040" BorderBrush="#FFABADB3" Click="OnChangePassword" Template="{DynamicResource ButtonTemplates}" />
                <Button x:Name="ChangeNickname" Content="Change nickname" HorizontalAlignment="Right" Margin="0,123.8,152.602,0" VerticalAlignment="Top" Width="121.4" Height="25" Foreground="#FFDDDDDD" Background="#00404040" BorderBrush="#FFABADB3" Click="OnChangeNickname" Template="{DynamicResource ButtonTemplates}" />
                <Button x:Name="ChangeAppearance" Content="Change appearance" HorizontalAlignment="Right" Margin="0,155,153,0" VerticalAlignment="Top" Width="122" Height="25" Foreground="#FFDDDDDD" Background="#00404040" BorderBrush="#FFABADB3" Click="OnChangeAppearance" Template="{DynamicResource ButtonTemplates}" />
                <!-- delete account button here -->
                <Button x:Name="Logout" Content="Logout" HorizontalAlignment="Right" Margin="0,187,153,0" VerticalAlignment="Top" Width="122" Height="25" Foreground="#FFDDDDDD" Background="#00404040" BorderBrush="#FFABADB3" Click="OnLogout" Template="{DynamicResource ButtonTemplates}" />
            </Grid>
            <!-- Account / log in / Appeariance grid -->
            <Grid x:Name="ChangeAppearanceGrid" HorizontalAlignment="Left" Height="342.233" VerticalAlignment="Top" Width="290" d:IsHidden="true">
                <!-- head -->
                <ComboBox x:Name="ChangeHead" HorizontalAlignment="Left" Margin="44,29.512,0,0" VerticalAlignment="Top" Width="80" FontFamily="{DynamicResource Bender}">
                    <ComboBoxItem Content="Head 1" IsSelected="True"/>
                    <ComboBoxItem Content="Head 2"/>
                </ComboBox>
                <Label Content="Head" Foreground="#FFDDDDDD" HorizontalAlignment="Left" Margin="64,6,0,0" VerticalAlignment="Top" Width="43" Height="24" FontFamily="{DynamicResource Bender}"/>
