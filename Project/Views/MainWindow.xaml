                        <TextBox x:Name="LimitMarksman" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="36" Margin="207.667,8.666,0,0" Foreground="#FFDDDDDD" Background="#00404040" TextChanged="OnChangeLimitMarksman" TextAlignment="Center" />

                        <!-- raiders -->
                        <Label Content="Raider" HorizontalAlignment="Left" Margin="133,36,0,0" VerticalAlignment="Top" Width="69" Foreground="#FFDDDDDD"/>
                        <TextBox x:Name="LimitPmcBot" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="36" Margin="207.667,36.666,0,0" Foreground="#FFDDDDDD" Background="#00404040" TextChanged="OnChangeLimitPmcBot" TextAlignment="Center" />

                        <!-- scavs -->
                        <Label Content="Scav" HorizontalAlignment="Left" Margin="133,65,0,0" VerticalAlignment="Top" Width="69" Foreground="#FFDDDDDD"/>
                        <TextBox x:Name="LimitScav" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="36" Margin="207.667,64.666,0,0" Foreground="#FFDDDDDD" Background="#00404040" TextChanged="OnChangeLimitScav" TextAlignment="Center" />
                    </Grid>
                </GroupBox>

                <GroupBox Header=" Spawn" HorizontalAlignment="Left" Height="138.741" Margin="10,197.325,0,0" VerticalAlignment="Top" Width="263.775" Foreground="White" BorderBrush="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Template="{DynamicResource GroupBoxTemplate}" FontFamily="{DynamicResource Bender}">
                    <Grid HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="255" Margin="0,0,0,0">
