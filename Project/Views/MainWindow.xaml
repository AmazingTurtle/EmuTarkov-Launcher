                    <Grid HorizontalAlignment="Center" Height="97.332" VerticalAlignment="Top" Width="255">
                        <!-- boss killa -->
                        <Label Content="Killa" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Width="60" Foreground="#FFDDDDDD"/>
                        <TextBox x:Name="LimitKilla" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="36" Margin="77,8.666,0,0" Foreground="#FFDDDDDD" Background="#00404040" TextChanged="OnChangeLimitKilla" TextAlignment="Center" />

