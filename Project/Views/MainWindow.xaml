<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        Title="EmuTarkov Launcher" Height="480" Width="730">
    <Grid x:Name="WindowGrid">
        <Image x:Name="Bg" Source="pack://siteoforigin:,,,/Resources/images/bg.png" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="730"/>



        <Grid x:Name="AppGrid" HorizontalAlignment="Left" Height="450" Margin="222,0,0,0" VerticalAlignment="Top" Width="495.824">
            <!-- account -->
            <Grid x:Name="AccountGrid" HorizontalAlignment="Left" Height="319.116" Margin="0,54.884,0,0" VerticalAlignment="Top" Width="495.824">
                <!-- code here -->
            </Grid>

            <!-- start buttons -->
            <Button Content="Start Server" HorizontalAlignment="Left" Margin="276.4,394.6,0,0" VerticalAlignment="Top" Width="131" Height="32.8" Click="OnStartServer" FontSize="16" Background="#FF404040" Foreground="#FFDDDDDD" BorderBrush="#FFABADB3"/>
            <Button Content="Start Game" HorizontalAlignment="Left" Margin="90,394.6,0,0" VerticalAlignment="Top" Width="131" Height="32.8" Click="OnStartGame" FontSize="16" Background="#FF404040" Foreground="#FFDDDDDD" BorderBrush="#FFABADB3"/>
        </Grid>

        <!-- message grid -->
        <Grid HorizontalAlignment="Left" Height="86.4" VerticalAlignment="Top" Width="220">
            <!-- error message -->
            <!--
            <Grid x:Name="ErrorGrid" HorizontalAlignment="Left" Height="49.884" VerticalAlignment="Top" Width="495.824" d:IsHidden="True">
                <Image x:Name="ErrorBg" Source="pack://siteoforigin:,,,/Resources/images/bg_error.png" Stretch="UniformToFill" HorizontalAlignment="Left" Height="49.884" VerticalAlignment="Top" Width="219.824"/>
                <Image x:Name="ErrorIcon" Source="pack://siteoforigin:,,,/Resources/images/icon_error.png" HorizontalAlignment="Left" Height="34.455" VerticalAlignment="Top" Width="41.647" RenderTransformOrigin="0.635,0.679" Margin="10,10,0,0"/>
                <Label x:Name="ErrorMessage" Content="An error occured" HorizontalAlignment="Left" Margin="56.647,10,0,0" VerticalAlignment="Top" Width="429.177" Height="34.455" Foreground="White" FontSize="16"/>
            </Grid>
            -->
        </Grid>

        <Label Content="Email" HorizontalAlignment="Left" Margin="306.8,90.4,0,0" VerticalAlignment="Top" Foreground="White" Height="25.6"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="306.8,116,0,0" TextWrapping="Wrap" Text="user1@emotarkov.com" VerticalAlignment="Top" Width="140" Background="#FF404040" Foreground="#FFDDDDDD"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="306.8,158.4,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="306.8,184,0,0" TextWrapping="Wrap" Text="password" VerticalAlignment="Top" Width="140" Background="#FF404040" Foreground="#FFDDDDDD"/>
        <Label Content="Game Location" HorizontalAlignment="Left" Margin="486.8,90.4,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="486.8,116,0,0" TextWrapping="Wrap" Text="C:\Games\EmuTarkov\Game" VerticalAlignment="Top" Width="160" Background="#FF404040" Foreground="#FFDDDDDD"/>
        <Label Content="Server location" HorizontalAlignment="Left" Margin="486.8,158.4,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="486.8,184,0,0" TextWrapping="Wrap" Text="C:\Games\EmuTarkov\Server" VerticalAlignment="Top" Width="160" Background="#FF404040" Foreground="#FFDDDDDD"/>
        <Label Content="Backend URL" HorizontalAlignment="Left" Margin="486.8,226.4,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="486.8,252,0,0" TextWrapping="Wrap" Text="http://localhost:1337" VerticalAlignment="Top" Width="160" Background="#FF404040" Foreground="#FFDDDDDD"/>
    </Grid>
</Window>
