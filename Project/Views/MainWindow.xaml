                <Button x:Name="Login" Content="Login" HorizontalAlignment="Center" Margin="108,180,108,0" VerticalAlignment="Top" Width="74" Height="25" Foreground="#FFDDDDDD" Background="#00404040" BorderBrush="#FFABADB3" Click="OnLogin" Template="{DynamicResource ButtonTemplates}"  FontFamily="{DynamicResource Bender}"/>
            </Grid>

            <Grid x:Name="RegisterGrid" HorizontalAlignment="Left" Height="342.233" VerticalAlignment="Top" Width="290" d:IsHidden="true">
