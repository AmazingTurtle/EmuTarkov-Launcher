            <!-- change nickname -->
            <!-- add textbox with change button -->

            <!-- delete account -->
            <!-- show warning for account deletion with button to go back or proceed -->

            <!-- logout -->
            <!-- show logout grid here with a message that the user logged out -->

            <!-- Initial page to display -->
