                <!-- hands -->
                <ComboBox x:Name="ChangeHands" HorizontalAlignment="Left" Margin="169,29.512,0,0" VerticalAlignment="Top" Width="80" FontFamily="{DynamicResource Bender}">
                    <ComboBoxItem Content="Hands 1" IsSelected="True"/>
                    <ComboBoxItem Content="Hands 2"/>
                </ComboBox>
                <Label Content="Hands" Foreground="#FFDDDDDD" HorizontalAlignment="Left" Margin="186,6,0,0" VerticalAlignment="Top" Width="44" Height="24" FontFamily="{DynamicResource Bender}"/>
                <Image x:Name="HandsImage" Source="/data/images/character/hands/bear_hands_skin.png" HorizontalAlignment="Left" Height="95" Width="80"  Margin="169,51.512,0,0" VerticalAlignment="Top" />

                <!-- body -->
                <ComboBox x:Name="ChangeBody" HorizontalAlignment="Left" Margin="169,187.664,0,0" VerticalAlignment="Top" Width="80" FontFamily="{DynamicResource Bender}">
                    <ComboBoxItem Content="Body 1" IsSelected="True"/>
                    <ComboBoxItem Content="Body 2"/>
                </ComboBox>
                <Label Content="Body" Foreground="#FFDDDDDD" HorizontalAlignment="Left" Margin="189,165,0,0" VerticalAlignment="Top" Width="43" Height="23" FontFamily="{DynamicResource Bender}"/>
                <Image x:Name="BodyImage" Source="/data/images/character/body/bear_body.png" HorizontalAlignment="Left" Height="95" Width="80" Margin="169,210.82,0,0" VerticalAlignment="Top"/>

                <!-- legs -->
                <ComboBox x:Name="ChangeLegs" HorizontalAlignment="Left" Margin="44,187.664,0,0" VerticalAlignment="Top" Width="80" FontFamily="{DynamicResource Bender}">
                    <ComboBoxItem Content="Legs 1" IsSelected="True"/>
                    <ComboBoxItem Content="Legs 2"/>
                </ComboBox>
                <Label Content="Legs" Foreground="#FFDDDDDD" HorizontalAlignment="Left" Margin="66,165,0,0" VerticalAlignment="Top" Width="44" Height="23" FontFamily="{DynamicResource Bender}"/>
                <Image x:Name="LegsImage" Source="/data/images/character/legs/bear_feet.png" HorizontalAlignment="Left" Height="95" Width="80" Margin="44,210.82,0,0" VerticalAlignment="Top" />

